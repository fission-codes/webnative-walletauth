{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "dom",
      "es2021",
      "webworker"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declarationDir": "lib",
    "outDir": "lib"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": []
}
